{
  "compilerOptions": {
    "declaration": true,
    "target": "esnext",        
    "module": "commonjs",      
    "allowJs": false,          
    "sourceMap": true,         
    //"strict": true,            
    "noUnusedLocals": false,    
    "noUnusedParameters": false,
    "noImplicitReturns": true, 
    "esModuleInterop": true,
    "noImplicitAny": false,
    "outDir": "dist/"
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
